<Window x:Class="TTL.Launcher.VersionLoadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TTL.Launcher"
        mc:Ignorable="d"
        Title="Loading" Height="80" Width="200"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
        ResizeMode="NoResize" SizeChanged="Window_SizeChanged" Loaded="Window_Loaded" Closing="Window_Closing"
        FontFamily="Calibri" FontSize="14">
    
    <Grid Background="#FF242232">

        <Image Source="/Tonic Trouble Launcher;component/Resources/Images/butterfly.png" Margin="29,2,28,2" Opacity="0.15">

            <Image.Effect>

                <DropShadowEffect BlurRadius="2"/>

            </Image.Effect>

        </Image>

        <TextBlock Text="Please wait..." VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="LightGray" FontWeight="DemiBold"/>

    </Grid>
    
</Window>
